<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCE5FF"
    android:orientation="vertical"
    tools:context=".Regist">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#6495ED">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="新用户注册"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5"
        android:useDefaultMargins="true"
        android:layout_margin="15dp"
        android:background="#CCE5FF">
        <TextView
            android:text="学号"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/et_zc_xuehao"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"/>
        <TextView
            android:text="姓名"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_zc_xingming"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"/>
        <TextView
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>
        <RadioGroup
            android:orientation="horizontal"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1">
            <RadioButton
                android:id="@+id/zc_sex1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <RadioButton
                android:id="@+id/zc_sex2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </RadioGroup>
        <TextView
            android:text="电话"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_zc_phone"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"/>
        <TextView
            android:text="年龄"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_zc_age"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"/>
        <TextView
            android:text="宿舍"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_zc_sushe"
            android:layout_columnSpan="4"
            android:layout_columnWeight="1"/>
        <TextView
            android:text="密码"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_zc_psw1"
            android:layout_columnSpan="4"
            android:inputType="textPassword"
            android:layout_columnWeight="1"/>
        <TextView
            android:text="密码再输入"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_zc_psw2"
            android:layout_columnSpan="4"
            android:inputType="textPassword"
            android:layout_columnWeight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_columnSpan="5">
            <Button
                android:id="@+id/bt_zc_queding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="确定"
                android:background="@drawable/et_bk"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/bt_zc_chongzhi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="重置"
                android:background="@drawable/et_bk"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/bt_zc_quxiao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="取消"
                android:background="@drawable/et_bk"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_weight="1"/>
        </LinearLayout>
    </GridLayout>



</LinearLayout>